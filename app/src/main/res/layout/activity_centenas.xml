<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Centenas">

    <EditText
        android:id="@+id/etCentenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCentenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce centenas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCentenas" />

    <Button
        android:id="@+id/buttonCentenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCentenas" />


</androidx.constraintlayout.widget.ConstraintLayout>